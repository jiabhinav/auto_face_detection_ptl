<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/card_blue_1"
    android:backgroundTint="@color/card_blue_1"
    android:gravity="center"
    app:cardCornerRadius="@dimen/_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_12dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="@dimen/_8dp"
            android:fontFamily="@font/poppins_black_bold"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_8dp"
            android:fontFamily="@font/poppins_regular_black"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingBottom="@dimen/_12dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavLoader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56dp"
                android:layout_marginTop="@dimen/_12dp"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_fileName="check.json"
                app:lottie_loop="false" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_okay"
            android:layout_width="@dimen/_160dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12dp"
            android:background="@drawable/bottom_dark_new"
            android:gravity="center"
            android:padding="@dimen/_6dp"
            android:text="@string/okay"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>